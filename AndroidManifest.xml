<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intelness.fgmsongs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:name="com.intelness.fgmsongs.globals.AppManager"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ListSongsActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".SearchSongActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".AddSongActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".ListEditableSongsActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".SummaryActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".OptionsActivity"
            android:label="@string/app_name" >
        </activity>
              
        <activity
            android:name=".AboutActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".SongActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
              <meta-data android:name="android.support.UI_OPTIONS"
    					android:value="splitActionBarWhenNarrow" />
        </activity>
        
        <activity
            android:name=".EditSongActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="ListNumberSongsActivity"
            android:label="@string/app_name">
        </activity>
              
    </application>

</manifest>
