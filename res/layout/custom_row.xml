<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivDrawerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@+id/tvDrawerItem"
        android:layout_alignTop="@+id/tvDrawerItem"
        android:contentDescription="@string/descLogo"
        android:src="@drawable/ic_action_new" />

    <TextView
        android:id="@+id/tvDrawerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/ivDrawerIcon"
        android:gravity="left"
        android:text="Drawer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/drawer_item_size" />

</RelativeLayout>
